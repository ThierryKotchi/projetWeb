<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="ProjetWeb_ID" version="3.1">
	<display-name>ProjetWeb</display-name>





	<!--   ************************ configuration servlet Accueil **************************  -->

	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>fr.formation.servlets.Accueil</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	
	
		<!--   ************************ configuration servlet Panier **************************  -->

	<servlet>
		<servlet-name>Panier</servlet-name>
		<servlet-class>fr.formation.servlets.Panier</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Panier</servlet-name>
		<url-pattern>/submitForm</url-pattern>
	</servlet-mapping>
	
	


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>